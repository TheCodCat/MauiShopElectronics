<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiShopElectronics.Pages.BascketPage"
             xmlns:eliseev="http://eliseev/base64Image"
             xmlns:viewModel="clr-namespace:MauiShopElectronics.ViewModels"
             xmlns:converts="clr-namespace:MauiShopElectronics.Converts">

    <Grid RowSpacing="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Text="Корзина" Grid.Row="0" Grid.Column="1" HorizontalTextAlignment="Center" FontAttributes="Bold" FontSize="30"/>
            <CollectionView Grid.Row="1" Grid.Column="1" ItemsSource="{Binding ProductBasckets}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout>
                            <Border Margin="5">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:BascketViewModel}}, Path=SelectProductCommand}" CommandParameter="{Binding .}"/>
                            </Border.GestureRecognizers>
                            <Grid ColumnSpacing="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <eliseev:ImageBase64 Grid.Column="0" Base64Source="{Binding Product.ProductRecordsBytes}" Aspect="AspectFill" WidthRequest="200" HeightRequest="200"/>

                                    <VerticalStackLayout Grid.Column="1">
                                        <Label Text="{Binding Product.ProductName}" FontSize="24"/>
                                    <BoxView StyleClass="Divider"/>
                                    <Label Text="{Binding Product.ProductDescription, Converter={converts:DescriptionTextConvert}}" FontSize="20"/>
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Column="2" Spacing="10" Margin="20">
                                        <Label Text="{Binding Product.ProductPrice, StringFormat='{0}р. - 1 шт.'}" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontAttributes="Bold" FontSize="24"/>
                                        <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                                            <Button Text="-" TextColor="White" Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:BascketViewModel}}, Path=MinusCountProductCommand}" CommandParameter="{Binding .}"/>
                                            <Label Text="{Binding Count}" FontSize="24"/>
                                            <Button Text="+" TextColor="White" FontSize="24" Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:BascketViewModel}}, Path=AddCountProductCommand}" CommandParameter="{Binding .}"/>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        <VerticalStackLayout Spacing="10" Margin="0,0,0,20" Grid.Column="1" Grid.Row="2" IsVisible="{Binding ProductBasckets, Converter={converts:VisibleToEmptyBascketConvert}}">
            <Label Text="{Binding CountBascketProduct, StringFormat='Количество - {0}'}" FontSize="26"/>
            <Button Text="{Binding AllPrice, StringFormat='Оплатить {0}'}" FontSize="26"/>
        </VerticalStackLayout>
    </Grid>

</ContentPage>