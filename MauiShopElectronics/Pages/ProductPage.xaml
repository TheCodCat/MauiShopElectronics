<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:eliseev="http://eliseev/base64Image"
             x:Class="MauiShopElectronics.Pages.ProductPage">
    
    <ScrollView>

        <FlexLayout Wrap="Wrap"
                    VerticalOptions="Fill"
                    AlignContent="Center"
                    AlignItems="Center"
                    JustifyContent="Center"
                    Direction="Row">
            <eliseev:ImageBase64 Base64Source="{Binding Product.ProductRecordsBytes}" HeightRequest="400"/>
            <VerticalStackLayout Spacing="10" Margin="20">
                <HorizontalStackLayout Spacing="10">
                    <Label Text="{Binding Product.Brand.BrandName}" FontSize="24" FontAttributes="Bold"/>
                    <Label Text="{Binding Product.ProductName}" FontSize="24" FontAttributes="Bold"/>
                </HorizontalStackLayout>
                <Label Text="{Binding Product.ProductDescription}"/>
            </VerticalStackLayout>
        </FlexLayout>
        
    </ScrollView>

</ContentPage>