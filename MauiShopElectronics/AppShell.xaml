<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiShopElectronics.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiShopElectronics"
    xmlns:pages="clr-namespace:MauiShopElectronics.Pages"
    Title="MauiShopElectronics">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Authorization"
        ContentTemplate="{DataTemplate pages:AuthorizationPage}"
        Route="Authorization" />

</Shell>
